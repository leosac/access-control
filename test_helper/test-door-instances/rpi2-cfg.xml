<?xml version="1.0"?>
<kernel>
    <instance_name>rpi-2</instance_name>
    <plugin_directories>
        <plugindir>./install/lib/leosac</plugindir>
        <plugindir>./install/lib/leosac/auth</plugindir>
    </plugin_directories>

    <network>
        <enabled>false</enabled>
    </network>

    <modules>
        <module>
            <name>INSTRUMENTATION</name>
            <file>libinstrumentation.so</file>
            <level>1</level>
            <module_config>
                <ipc_endpoint>/tmp/leosac-ipc</ipc_endpoint>
            </module_config>
        </module>

        <module>
            <name>WIEGAND_READER</name>
            <file>libwiegand.so</file>
            <level>2</level>

            <module_config>
                <readers>
                    <reader>
                        <name>MY_WIEGAND_1</name>
                        <high>wiegand_data_high</high>
                        <low>wiegand_data_low</low>
                        <green_led></green_led>
                        <buzzer></buzzer>
                    </reader>
                </readers>
            </module_config>
        </module>

        <module>
            <name>AUTH_FILE</name>
            <file>libauth-file.so</file>
            <level>3</level>

            <module_config>
                <instances>
                    <instance>
                        <name>AUTH_CONTEXT_1</name>
                        <auth_source>MY_WIEGAND_1</auth_source>
                        <config_file>this_test/auth-file.xml</config_file>
                        <target>doorA</target>
                    </instance>
                </instances>
            </module_config>
        </module>
    </modules>
</kernel>
