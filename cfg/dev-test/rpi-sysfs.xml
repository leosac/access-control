<?xml version="1.0"?>
<kernel>
    <plugin_directories>
        <plugindir>.</plugindir>
    </plugin_directories>

    <network>
        <enabled>false</enabled>
    </network>

    <modules>
        <module>
            <name>STDIN_CONTROLLER</name>
            <file>libstdin-controller.so</file>
            <level>40</level>
        </module>

        <module>
            <name>AUTH_FILE</name>
            <file>libauth-file.so</file>
            <level>41</level>

            <module_config>
                <instances>
                    <!-- Multiple authentication instance are allowed -->
                    <instance>
                        <name>AUTH_CONTEXT_1</name>

                        <!-- Device we watch as input source -->
                        <auth_source>MY_WIEGAND_1</auth_source>
                                <!-- File that contains (1 per line) the textual data that is valid.
With a wiegand reader, it could be something like this "ab:0f:fa:12" -->
                        <valid_input_file>valid-cards.txt</valid_input_file>
                    </instance>
                </instances>
            </module_config>
        </module>

        <module>
            <name>MONITOR</name>
            <file>libpersistent-monitor.so</file>
            <level>1</level>

            <module_config>
                <file>MY_LOGS.txt</file>
                <verbose>false</verbose>
            </module_config>
        </module>

        <module>
            <name>SYSFS-GPIO</name>
            <file>libsysfsgpio.so</file>
            <level>2</level>

            <module_config>
                <gpios>
                    <!-- Prepare GPIO for our Wiegand reader -->
                    <gpio>
                        <name>wiegand_data_high</name>
                        <no>15</no>
                        <direction>in</direction>
                    </gpio>
                    <gpio>
                        <name>wiegand_data_low</name>
                        <no>14</no>
                        <direction>in</direction>
                    </gpio>
                    <gpio>
                        <name>wiegand_green</name>
                        <no>3</no>
                        <direction>out</direction>
                        <value>low</value>
                    </gpio>
                </gpios>
            </module_config>
        </module>

        <module>
            <name>WIEGAND_READER</name>
            <file>libwiegand.so</file>
            <level>5</level>

            <module_config>
                <readers>
                    <reader>
                        <name>MY_WIEGAND_1</name>
                        <high>wiegand_data_high</high>
                        <low>wiegand_data_low</low>
                    </reader>
                </readers>
            </module_config>
        </module>

        <module>
            <name>TEST_AND_RESET</name>
            <file>libtest-and-reset.so</file>
            <level>101</level>
            <module_config>
                <devices>
                    <device>
                        <name>MY_WIEGAND_1</name>
                        <reset_card>40:a0:83:80</reset_card>
                    </device>
                </devices>
            </module_config>
        </module>
    </modules>
</kernel>