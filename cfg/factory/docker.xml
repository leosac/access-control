<?xml version="1.0"?>
<kernel>
    <instance_name>Leosac</instance_name>
    <plugin_directories>
      <plugindir>/usr/local/lib/leosac</plugindir>
      <plugindir>/usr/local/lib/leosac/auth</plugindir>
    </plugin_directories>

    <network>
        <enabled>false</enabled>
    </network>

    <log>
      <enable_syslog>true</enable_syslog>
      <min_syslog>DEBUG</min_syslog>
    </log>

    <modules>
      <module>
          <name>WEBSOCK_API</name>
          <file>libwebsock-api.so</file>
          <level>1</level>
          <module_config>
              <port>8888</port>
          </module_config>
      </module>
    
    </modules>

</kernel>
